{% extends 'base.html.twig' %}

{% block title %}Connexion | Cuisine{% endblock %}

{% block body %}
<main class="container">
    <section class="login-box">
        <header>
            <h2>Connexion</h2>
        </header>

        {% if error %}
            <p class="error">{{ error }}</p>
        {% endif %}

        <form method="post">
            <fieldset>
                <legend>Identifiez-vous</legend>

                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" required>

                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" required>

                <!-- Checkbox bien aligné avec le label -->
                <div class="remember-me">
                    <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit">Se connecter</button>
            </fieldset>
        </form>

        <nav class="login-links">
            <a href="{{ path('reset_password') }}">Mot de passe oublié ?</a>
            <a href="{{ path('register') }}">Créer un compte</a>
        </nav>
    </section>
</main>

<style>
    /* ======= Style Global ======= */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    /* Fond d'écran */
    body {
        background: url("{{ asset('images/recette-bg.jpg') }}") no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

    /* Overlay pour foncer l'arrière-plan */
    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }

    /* ======= Conteneur principal ======= */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* ======= Boîte de connexion ======= */
    .login-box {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        width: 350px;
        text-align: center;
    }

    .login-box header h2 {
        margin-bottom: 20px;
    }

    /* Champs de formulaire */
    fieldset {
        border: none;
    }

    legend {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    label {
        display: block;
        text-align: left;
        margin-top: 10px;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 8px;
        margin: 5px 0 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Aligner le checkbox et le label */
    .remember-me {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 8px;
        margin-bottom: 15px;
    }

    .remember-me input {
        width: auto;
        margin: 0;
    }

    .remember-me label {
        margin: 0;
        font-weight: normal;
    }

    /* ======= Style du bouton ======= */
    button {
        width: 100%;
        padding: 10px;
        background-color: #ff6600;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #cc5500;
    }

    /* ======= Liens ======= */
    .login-links {
        margin-top: 15px;
    }

    .login-links a {
        display: block;
        color: #333;
        text-decoration: none;
        font-size: 14px;
        margin-top: 5px;
    }

    .login-links a:hover {
        color: #ff6600;
    }

    /* ======= Message d'erreur ======= */
    .error {
        color: red;
        margin-bottom: 15px;
        font-size: 14px;
    }

    /* ======= Responsive ======= */
    @media (max-width: 480px) {
        .login-box {
            width: 90%;
        }
    }
</style>
{% endblock %}
