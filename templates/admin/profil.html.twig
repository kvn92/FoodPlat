{% extends 'base.html.twig' %}

{% block title %}Profil de {{ utilisateur.pseudo }}{% endblock %}

{% block body %}
<main class="container mt-5">
    <!-- üìù Informations principales -->
    <section class="profile-header row align-items-center">
        <!-- üñºÔ∏è Colonne de gauche - Photo -->
        <div class="col-md-4 text-center">
            <figure class="profile-picture">
                <img src="{{ utilisateur.photo ? asset('uploads/profiles/' ~ utilisateur.photo) : asset('images/default-avatar.png') }}" alt="Photo de {{ utilisateur.pseudo }}">
            </figure>
        </div>

        <!-- ‚ÑπÔ∏è Colonne de droite - Infos utilisateur -->
        <div class="col-md-8">
            <h1 class="profile-name">{{ utilisateur.pseudo }}</h1>
            <p class="profile-email"><i class="fas fa-envelope"></i> {{ utilisateur.email }}</p>
            <p class="profile-status">
                <strong>Statut :</strong>
                {% if utilisateur.statutUtilisateur %}
                    <span class="status-badge active">Actif</span>
                {% else %}
                    <span class="status-badge inactive">Inactif</span>
                {% endif %}
            </p>
            <p class="profile-date"><i class="fas fa-calendar-alt"></i> Inscrit le : {{ utilisateur.dateInscription | date('d/m/Y') }}</p>
        </div>
    </section>

    <!-- üî¢ Statistiques -->
    <section class="profile-stats mt-4">
        <div class="row justify-content-center">
            <article class="stat-box col-md-2 col-sm-4">
                <span class="stat-number">{{ nombres }}</span>
                <span class="stat-label">Recettes publi√©es</span>
            </article>
            <article class="stat-box col-md-2 col-sm-4">
                <span class="stat-number">{{ nombresFavoris }}</span>
                <span class="stat-label">Favoris</span>
            </article>
            <article class="stat-box col-md-2 col-sm-4">
                <span class="stat-number">{{ nombresLikes }}</span>
                <span class="stat-label">Likes</span>
            </article>
            <article class="stat-box col-md-2 col-sm-4">
                <span class="stat-number">{{ suit }}</span>
                <span class="stat-label">Suit</span>
            </article>
            <article class="stat-box col-md-2 col-sm-4">
                <span class="stat-number">{{ suivi }}</span>
                <span class="stat-label">Suivi par</span>
            </article>
        </div>
    </section>

    <!-- üìú Liste des recettes publi√©es -->
    <section class="profile-recipes mt-4">
        <h2 class="text-center">Recettes de {{ utilisateur.pseudo }}</h2>
        
        {% if recettes|length > 0 %}
            <table class="table table-hover shadow-sm">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Date de publication</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recette in recettes %}
                        <tr class="align-middle text-center">
                            <td>{{ loop.index }}</td>
                            <td>{{ recette.titreRecette }}</td>
                            <td>{{ recette.datePublication|date('d/m/Y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-center">Aucune recette publi√©e.</p>
        {% endif %}
    </section>

    <!-- üîô Boutons Retour & Modifier -->
    <section class="action-buttons mt-4 text-center">
        <a href="{{ path('admin.index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
        <a href="{{ path('admin.edit', { id: utilisateur.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier</a>
    </section>
</main>
{% endblock %}
