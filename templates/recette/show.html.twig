{% endif %}


    <h2>Commentaires</h2>
    {% if commentaires is not empty %}
        <ul>
            {% for commentaire in commentaires %}
                <li>
                    <p>{{ commentaire.commentaire }}</p>
                    <small>Post√© le {{ commentaire.dateCommentaire | date('d-m-Y H:i') }}</small>
                </li>
            {% endfor %}
