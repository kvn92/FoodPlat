{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">{{ titre }}</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('categorie.new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter une catégorie
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Nom</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td class="align-middle text-center">{{ categorie.categorie }}</td>
                    <td class="align-middle text-center">
                        {% if categorie.statutCategorie %}
                            <a href="{{ path('categorie.toggle_statut', { id: categorie.id }) }}" class="badge bg-success text-decoration-none">
                                Actif
                            </a>
                        {% else %}
                            <a href="{{ path('categorie.toggle_statut', { id: categorie.id }) }}" class="badge bg-danger text-decoration-none">
                                Inactif
                            </a>
                        {% endif %}
                    </td>
                    <td class="d-flex justify-content-center gap-2">
                        <a href="{{ path('categorie.show', { id: categorie.id }) }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('categorie.edit', { id: categorie.id }) }}" class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <form action="{{ path('categorie.delete', { id: categorie.id }) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                            {{ form(deleteForms[categorie.id]) }}
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
