{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Ajouter une nouvelle catégorie</h1>

    <div class="mb-3">
        <a href="{{ path('categorie.index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <div class="card shadow-lg p-4 col-md-8 mx-auto">
        <h5 class="card-title text-center mb-3">Remplissez les informations</h5>
        {{ form_start(form, {'method': 'POST'}) }}
            <div class="mb-3">
                {{ form_row(form.categorie) }}
            </div>

            {% if form.statutCategorie is defined %}
                <div class="mb-3">
                    {{ form_row(form.statutCategorie) }}
                </div>
            {% endif %}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
