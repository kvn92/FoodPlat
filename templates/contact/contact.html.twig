{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<main class="container mt-5">
    <header class="text-center mb-4">
        <h1>Nous contacter</h1>
        <p class="text-muted">
            Une question, une suggestion ? Remplissez le formulaire ci-dessous, nous vous répondrons dès que possible !
        </p>
    </header>

    <section class="contact-form mx-auto p-4 shadow-sm rounded">
        {{ form_start(form) }}
        
        <div class="row g-3">
            <div class="col-md-6">{{ form_row(form.name) }}</div>
            <div class="col-md-6">{{ form_row(form.email) }}</div>
        </div>

        <div class="mt-3">{{ form_row(form.message) }}</div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>

        {{ form_end(form) }}
    </section>
</main>
{% endblock %}
