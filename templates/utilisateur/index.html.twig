{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">{{ nbUtilisateurs }} {{ secteur }}</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('admin.new') }}" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Ajouter un utilisateur
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td class="align-middle text-center">{{ utilisateur.pseudo }}</td>
                    <td class="align-middle text-center">{{ utilisateur.email }}</td>
                    <td class="d-flex justify-content-center gap-2">
                        <a href="{{ path('admin.show', { id: utilisateur.id }) }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('admin.edit', { id: utilisateur.id }) }}" class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit"></i> Modifier
